/*
    GameViewer 24位色二进制图片输出脚本
*/

if [gv.state == gv.LOOP]
[
    fp = io.fopenW [gv.fileName, L"wb"];

    io.writeUint [gv.width,  fp];
    io.writeUint [gv.height, fp];

    size = gv.width * gv.height;

    gv.to888 [gv.image, size];

    io.fwrite [gv.image, size * 3, 1, fp];
    io.fclose [fp];
]
